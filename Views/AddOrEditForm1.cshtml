@model Nop.Plugin.Widgets.StudentInfo.Models.StudentViewModel
@{
    Layout = "_ConfigurePlugin";
}

<div class="row " >
   <div style="display:flex;justify-content:center;align-items:center;">
        <div class="card" style="margin:10px; padding:10px; border:1px solid gray;width:600px;">
            <div class="card-header">
                <h4>@ViewBag.StudentTitle Your Informations</h4>
            </div>
            <div class="card-body">
                <form asp-controller="@ViewBag.StudentRequestController" asp-action="@ViewBag.StudentRequestAction" method="post" >
    
                    <div class="form-fields" style="width:100%;">
                     

                        <input type="text" asp-for="Id" hidden
                       
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <label asp-for="Name"></label>
                                </div>
                                <div class="col-md-9">
                                <input type="text" asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-md-3">
                                    <label asp-for="Age"></label> 
                                </div>
                                <div class="col-md-9">
                                <input type="number" asp-for="Age" class="form-control" />
                                    <span asp-validation-for="Age"></span>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-md-3">
                                    <label asp-for="DateOfBirth"></label> 
                                </div>
                                <div class="col-md-9">
                                <input type="datetime" asp-for="DateOfBirth" class="form-control" />
                                    <span asp-validation-for="DateOfBirth"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-3">
                                    <label asp-for="MaritalStatus"></label> 
                                </div>
                                <div class="col-md-9">
                                <input type="text" asp-for="MaritalStatus" class="form-control" />
                                    <span asp-validation-for="MaritalStatus"></span>
                                </div>
                            </div>

                    </div>
                    <div class="buttons">
                        <button type="submit" class="button-1 login-button">Submit</button>
                    </div>
                </form>
            </div>

        </div>
   </div>
</div>

    <script>
        $(function () {
            $("#DateOfBirth").datepicker();
        });
    </script>